<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C6FFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/detail_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/btn_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/entry2" />

        <ImageView
            android:id="@+id/btn_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/talk2" />

        <ImageView
            android:id="@+id/btn_schedule_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/schedule_setting2" />
    </LinearLayout>
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/info_page"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
				<ListView
				    android:id="@+id/info_list"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent">
				 
				</ListView>
            </LinearLayout>
            
             <LinearLayout
                android:id="@+id/entry_page"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
				<ListView
				    android:id="@+id/entry_list"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent">
				 
				</ListView>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_page"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
				<ListView
				    android:id="@+id/comment_list"
				    android:layout_width="fill_parent"
				    android:layout_weight="8"
				    android:layout_height="100dp">
				 	
				</ListView>
				<LinearLayout
				   	 android:layout_width="fill_parent"
		          	 android:orientation="vertical"
		          	 android:layout_weight="0.1"
		          	 android:background="@drawable/boarder_square"
		          	 android:layout_height="wrap_content">
				   	<LinearLayout
				   	     android:layout_width="fill_parent"
				         android:orientation="horizontal"
				         android:background="@drawable/boarder_bottom_gray"
				         android:layout_height="wrap_content">
				   	    <CheckBox
				   	        android:id="@+id/comment_alarm"
				   	        android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="참여인원들에게 새댓글을 알리기"
				            android:textColor="#000000">
				  	    </CheckBox>
				   	</LinearLayout>
					   	
					<LinearLayout
					     android:layout_width="fill_parent"
			          	 android:orientation="horizontal"
			          	 android:layout_height="wrap_content">
					
				         <EditText
				            android:id="@+id/enroll_comment"
				            android:background="@drawable/boarder_round"
				            android:layout_width="wrap_content"
				            android:layout_weight="4"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:hint="댓글을 입력하세요"
				            android:ems="10" />
				         <Button 
				            android:id="@+id/enroll_comment_btn"
				            android:layout_width="wrap_content"
				            android:layout_weight="1"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:text="등록">
				             
				         </Button>
				  	 </LinearLayout>
				</LinearLayout>
			</LinearLayout>
             
            <LinearLayout
                android:id="@+id/modify_page"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
				<ListView
				    android:id="@+id/modify_list"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent">
				 
				</ListView>
			</LinearLayout>
        </FrameLayout>

</LinearLayout>